{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleDetection": "force",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "allowJs": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "test/handler.ts"
, "test/adapters/drizzle/sqlite.test.ts", "test/client/token.test.ts", "test/core/handlers/callback.test.ts", "test/core/handlers/cors.test.ts", "test/core/handlers/link.test.ts", "test/core/handlers/login.test.ts", "test/core/handlers/session.test.ts", "test/core/cookies.test.ts", "test/core/createAuth.test.ts", "test/core/handler.test.ts", "test/jwt/jwt.test.ts", "test/jwt/utils.test.ts", "test/oauth/providers/github.test.ts", "test/oauth/providers/google.test.ts", "test/oauth/providers/microsoft.test.ts", "test/runtimes/tauri.test.ts", "test/solidstart/index.test.ts", "test/sveltekit/index.test.ts"  ],
  "exclude": [
    "src/client",
    "test",
    "dist",
    "node_modules",
    "tsup.config.ts"
  ]
}
